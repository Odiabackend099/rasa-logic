# CallWaitingAI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# RASA CONFIGURATION
# =============================================================================
RASA_SERVER_URL=http://localhost:5005
ACTION_SERVER_URL=http://localhost:5055

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# =============================================================================
# MINIMAX AI CONFIGURATION (STT/TTS)
# =============================================================================
MINIMAX_API_URL=https://api.minimax.io/v1
MINIMAX_API_KEY=your-minimax-api-key
MINIMAX_GROUP_ID=your-minimax-group-id
MINIMAX_MODEL=speech-02-hd

# TTS Configuration
# Timeout for TTS requests in milliseconds (default: 30 seconds)
TTS_TIMEOUT_MS=30000
# Maximum text length for TTS (default: 5000 characters)
MAX_TEXT_LENGTH=5000

# =============================================================================
# TELEGRAM INTEGRATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# Default chat ID for notifications (can be overridden)
TELEGRAM_CHAT_ID=your-default-chat-id

# =============================================================================
# TWILIO INTEGRATION
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
TWILIO_WEBHOOK_BASE_URL=https://your-domain.com

# =============================================================================
# WHATSAPP INTEGRATION
# =============================================================================
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# Session timeout in milliseconds (default: 24 hours)
SESSION_TIMEOUT_MS=86400000
# Cleanup interval in milliseconds (default: 1 hour)
CLEANUP_INTERVAL_MS=3600000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting - requests per window
RATE_LIMIT_REQUESTS=100
# Rate limiting - window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
# Set to 'true' to enable detailed error logging (development only)
ENABLE_DETAILED_ERRORS=false